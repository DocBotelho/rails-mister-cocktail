<h1>Cocktails#show</h1>
<hr>
<p><%= link_to "All Cocktails", cocktails_path, class: "btn btn-primary" %></p>
<hr>

<% unless @cocktail.photo.blank? %>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% end %>

<p><%= "My #{@cocktail.name} mix:" %></p>
<% @doses.each_with_index do |dose, index| %>
  <p><%= link_to "#{index + 1}) #{dose.description} of #{dose.ingredient.name}", cocktail_dose_path(@cocktail, dose) %></p>
<% end %>

<hr>
<p><%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>

<%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?", }, class: "btn btn-danger" %>
